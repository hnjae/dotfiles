# vi:ft=zsh

local src="$1"
local dst="$2"

if [[ "$src" == "" || "$dst" == "" || "$3" != "" ]]; then
  echo "Usage: (command) <source> <destination>"
  return
fi

rsync --info=progress2 -h -aHAXWEs --numeric-ids --no-inc-recursive --fuzzy --delete-after -- "$src" "$dst"

if (( $+commands[notify-send] )) && [[ "$DISPLAY" != "" ]]; then
  $commands[notify-send] "rsync-copy $src done"
fi
