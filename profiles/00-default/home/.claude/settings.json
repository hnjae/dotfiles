{
  "permissions": {
    "allow": [
      "WebFetch(domain:github.com)",
      "WebFetch(domain:docs.rs)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git mv:*)",
      "Bash(git rm:*)",
      "Bash(git status:*)",
      "Bash(cat:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(tree:*)",
      "Bash(wc:*)",
      "Bash(uv run ruff:*)",
      "Bash(uv run ty:*)",
      "Bash(podman build:*)"
    ],
    "deny": [
      "Read(.env*)",
      "Read(./secrets/**)",
      "Read(**/*.key)",
      "Write(.env*)"
    ]
  },
  "model": "sonnet"
}
