{
  "permissions": {
    "allow": [
      "WebFetch(domain:github.com)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(tree:*)"
    ],
    "deny": [
      "Read(.env*)",
      "Read(./secrets/**)",
      "Read(**/*.key)",
      "Write(.env*)"
    ]
  },
  "model": "claude-sonnet-4-5"
}
