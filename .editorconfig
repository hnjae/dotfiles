root = true

[*]
end_of_line = lf
charset = utf-8
tab_width = 8
insert_final_newline = true
trim_trailing_whitespace = true

[*.lua]
indent_style = space
indent_size = 2
max_line_length = 120

[*.{json,jsonc}]
indent_style = space
indent_size = 2

[*.snippets]
indent_style = tab

[justfile]
indent_style = space
indent_size = 4
