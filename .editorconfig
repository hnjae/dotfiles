root = true

[*]
end_of_line = lf
charset = utf-8
tab_width = 8
insert_final_newline = true
trim_trailing_whitespace = true

[{justfile,.justfile}]
indent_size = 4
indent_style = space

[*.lua]
indent_style = space
indent_size = 2
max_line_length = 100

[*.py]
indent_style = space
indent_size = 4
max_line_length = 79

[*.{sh,bash,fish,zsh,nu}]
indent_style = space
indent_size = 4
max_line_length = 80

[.{env,envrc,profile}]
indent_style = space
indent_size = 4
max_line_length = 80

[.{env,envrc}.*]
indent_style = space
indent_size = 4
max_line_length = 80

[*.{json,jsonc,yaml,yml,toml,conf}]
indent_style = space
indent_size = 2

[*.{md}]
indent_style = space
indent_size = 4

[*.snippets]
indent_style = tab

[.gitmodules]
indent_style = tab
indent_size = 8
tab_width = 8
