root = true

[*]
end_of_line = lf
charset = utf-8
tab_width = 8
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[justfile]
indent_style = space
indent_size = 4

[*.lua]
indent_style = space
indent_size = 2
max_line_length = 100

[*.py]
indent_style = space
indent_size = 4
max_line_length = 80

[*.zsh]
indent_style = space
indent_size = 2
max_line_length = 80

[*.{json,jsonc,yaml,yml,toml,conf,md}]
indent_style = space
indent_size = 2

[*.snippets]
indent_style = tab

[.gitmodules]
indent_style = tab
indent_size = 8
tab_width = 8
