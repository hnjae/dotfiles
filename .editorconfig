root = true

[*]
end_of_line = lf
charset = utf-8
tab_width = 8
insert_final_newline = true
trim_trailing_whitespace = true

[install.sh]
indent_style = tab
max_line_length = 80

[justfile]
indent_style = space
indent_size = 4

[*.lua]
indent_style = space
indent_size = 2
max_line_length = 100

[*.zsh]
indent_style = space
indent_size = 2
max_line_length = 80

[*.{json,jsonc,yaml,yml,toml,conf,md}]
indent_style = space
indent_size = 2

[*.snippets]
indent_style = tab
