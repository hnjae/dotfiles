{
  "badmonition": {
    "prefix": "badmonition",
    "description": "block - admonition",
    "body": [
      "[${1:NOTE,IMPORTANT,TIP,CAUTION,WARNING,IMPORTANT}]",
      ".${2:Optional}",
      "====",
      "$0",
      "===="
    ]
  },
  "bquotes": {
    "prefix": "bquotes",
    "description": "blockquotes",
    "body": [
      ".${1:(optional) title}",
      "[quote,${2:(opt) attribution,}${3:citation title and information}]",
      "____",
      "${0:Quote or excerpt text}",
      "____"
    ]
  },
  "fo": {
    "prefix": "fo",
    "description": "add stem attribute",
    "body": "footnote:${1:id}[${2:text}]"
  },
  "lst": {
    "prefix": "lst",
    "description": "insert source block",
    "body": [
      ".${2:name}",
      "[source, ${1:lang}]",
      "----",
      "$0",
      "----"
    ]
  },
  "js": {
    "prefix": "js",
    "description": "insert source block",
    "body": [
      ".${2:name}",
      "[source, javascript]",
      "----",
      "$0",
      "----"
    ]
  },
  "ts": {
    "prefix": "ts",
    "description": "insert source block",
    "body": [
      ".${2:name}",
      "[source, typescript]",
      "----",
      "$0",
      "----"
    ]
  },
  "bsidebar": {
    "prefix": "bsidebar",
    "description": "block - sidebar",
    "body": [
      ".${1:Optional title}",
      "****",
      "$0",
      "****"
    ]
  },
  "attr-source-highlight": {
    "prefix": "attr-source-highlight",
    "description": "add highlighter attribute",
    "body": [
      ":source-highlighter: highlightjs",
      ":highlightjs-languages: $0"
    ]
  },
  "attr-stem": {
    "prefix": "attr-stem",
    "description": "add stem attribute",
    "body": ":stem: latexmath"
  },
  "st": {
    "prefix": "st",
    "description": "strikethrough",
    "body": "[.line-through]#${1:blabla}# $0"
  },
  "tab": {
    "prefix": "tab",
    "description": "draw table",
    "body": [
      ".\\${:table_titl\\}",
      "|===",
      "|.${1:Name of Column 1}",
      "|Name of Column 2",
      "|Cell in column 1, row 1",
      "|Cell in column 2, row 1",
      "|==="
    ]
  },
  "**": {
    "prefix": "**",
    "description": "unconstrained bold",
    "body": "**${1:blabla}**$0"
  },
  "__": {
    "prefix": "__",
    "description": "unconstrained italic: __blabla__",
    "body": "__${1:blabla}__$0"
  },
  "``": {
    "prefix": "``",
    "description": "unconstrained monospace",
    "body": "``${1:blabla}``$0"
  }
}
