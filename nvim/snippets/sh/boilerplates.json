{
  "filename": {
    "prefix": "filename",
    "description": "get filename without path",
    "body": [
      "\"\\$(basename -- \"\\${$1\\}\")\"",
      ""
    ]
  },
  "filestem": {
    "prefix": "filestem",
    "description": "get stem from path",
    "body": [
      "$0=\"\\${filename%.*\\}\"",
      ""
    ]
  },
  "confirm": {
    "prefix": "confirm",
    "description": "confirm user",
    "body": [
      "confirm() {",
      "\techo \"Are you sure? [YES/Any]: \\c\"",
      "\tread -r response",
      "\tcase \"\\$response\" in",
      "\t\"YES\")",
      "\t\ttrue",
      "\t\t;;",
      "\t*)",
      "\t\tfalse",
      "\t\t;;",
      "\tesac",
      "\\}$0",
      ""
    ]
  },
  "confirmb": {
    "prefix": "confirmb",
    "description": "\"confirm user (bash)\"",
    "body": [
      "confirm() {",
      "\tread -n 1 -r -p \"Are you sure? [y/Any]\" response",
      "\tcase \"\\$response\" in",
      "\t[yY])",
      "\t\ttrue",
      "\t\t;;",
      "\t*)",
      "\t\tfalse",
      "\t\t;;",
      "\tesac",
      "\\}$0",
      ""
    ]
  },
  "scriptdir": {
    "prefix": "scriptdir",
    "description": "\"It will NOT resolve path. It will NOT WORK if script is being sourced.\"",
    "body": [
      "$0\"\\$(cd -- \"\\$(dirname -- \"$0\")\" && pwd -P)\" >/dev/null 2>&1",
      ""
    ]
  },
  "symlinkreslove": {
    "prefix": "symlinkreslove",
    "description": "\"\"",
    "body": [
      "readlink -f -- <path>",
      ""
    ]
  },
  "dateiso8601": {
    "prefix": "dateiso8601",
    "description": "\"ISO-8601 date\"",
    "body": "date -u +\"%Y-%m-%dT%H:%M:%SZ\""
  }
}
