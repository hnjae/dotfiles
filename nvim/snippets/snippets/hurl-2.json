{
  "POST json": {
    "prefix": "spostjson",
    "description": "post json",
    "body": [
      "POST http://${1:url}",
      "content-type: application/json",
      "{",
      "\t${0:json-body}",
      "\\}"
    ]
  },
  "POST json w. options": {
    "prefix": "spostjsonopt",
    "description": "POST json body with options",
    "body": [
      "POST http://{{host\\}\\}",
      "content-type: application/json",
      "[Options]",
      "variable: host = \"${1:localhost:3000}\"",
      "{",
      "\t\"$0\"",
      "\t\"name\": \"{{newUuid\\}\\}\",",
      "\t\"order\": 0",
      "\\}"
    ]
  },
  "UUID": {
    "prefix": "suuid",
    "description": "newUuid",
    "body": "{{newUuid\\}\\}"
  },
  "Random int number": {
    "prefix": "sint",
    "description": "random-int-number (will be provided by neovim's hurl plugin)",
    "body": "{{random_int_number\\}\\}"
  }
}
