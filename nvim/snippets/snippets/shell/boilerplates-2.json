{
    "boilerplate-bash": {
        "prefix": "boilerplate-bash",
        "description": "\"boilerplate of Bash shell scripts\"",
        "body": [
            "#!/usr/bin/env bash",
            "",
            "set -euo pipefail",
            "",
            "input=\"\"",
            "all=false",
            "files=()",
            "",
            "usage() {",
            "\techo \"Usage: \\$(basename -- \"\\${1:filename\\}\") [-i input] [-a] [--] [files...]\"",
            "\texit 1",
            "\\}",
            "",
            "while getopts \":i:ha\" opt; do",
            "\tcase \\${opt\\} in",
            "\th)",
            "\t\tusage",
            "\t\t;;",
            "\ti)",
            "\t\tinput=\\$OPTARG",
            "\t\t;;",
            "\ta)",
            "\t\tall=true",
            "\t\t;;",
            "\t\\?)",
            "\t\techo \"Invalid Option: -\\$OPTARG\" 1>&2",
            "\t\tusage",
            "\t\t;;",
            "\t:)",
            "\t\techo \"Invalid Option: -\\$OPTARG requires an argument\" 1>&2",
            "\t\tusage",
            "\t\t;;",
            "\tesac",
            "done",
            "shift \\$((OPTIND - 1))",
            "# Remaining arguments",
            "files=(\"\\$@\")",
            "",
            "main() {",
            "\t$0",
            "\techo \"Input: \\$input\"",
            "\techo \"All: \\$all\"",
            "\techo \"Files: \\${files[@]\\}\"",
            "",
            "\tfor file in \"\\${files[@]\\}\"; do",
            "\t\techo \"Handling \\$file\"",
            "\tdone",
            "\\}",
            "",
            "main"
        ]
    },
    "boilerplate-posix": {
        "prefix": "boilerplate-posix",
        "description": "boilerplate of POSIX shell scripts",
        "body": [
            "#!/bin/sh",
            "",
            "set -eu",
            "",
            "input=\"\"",
            "all=false",
            "",
            "usage() {",
            "\techo \"Usage: \\$(basename -- \"\\${1:filename\\}\") [-i input] [-a] [--] [files...]\"",
            "\texit 1",
            "\\}",
            "",
            "while getopts \":i:ha\" opt; do",
            "\tcase \\${opt\\} in",
            "\th)",
            "\t\tusage",
            "\t\t;;",
            "\ti)",
            "\t\tinput=\\$OPTARG",
            "\t\t;;",
            "\ta)",
            "\t\tall=true",
            "\t\t;;",
            "\t\\?)",
            "\t\techo \"Invalid Option: -\\$OPTARG\" 1>&2",
            "\t\tusage",
            "\t\t;;",
            "\t:)",
            "\t\techo \"Invalid Option: -\\$OPTARG requires an argument\" 1>&2",
            "\t\tusage",
            "\t\t;;",
            "\tesac",
            "done",
            "shift \\$((OPTIND - 1))",
            "",
            "main() {",
            "\t$0",
            "\techo \"Input: \\$input\"",
            "\techo \"All: \\$all\"",
            "\tif [ \\$# -eq 0 ]; then",
            "\t\techo \"No files provided\"",
            "\t\texit 0",
            "\tfi",
            "",
            "\tfor file; do",
            "\t\techo \"Handling \\$file\"",
            "\tdone",
            "\\}",
            "",
            "# Call main function with all remaining parameters",
            "main \"\\$@\""
        ]
    },
    "boilerplate-env": {
        "prefix": "boilerplate-env",
        "description": "\".env file\"",
        "body": [
            "#!/bin/sh",
            "# shellcheck disable=2034"
        ]
    }
}
