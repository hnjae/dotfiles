{
    "Snippet w/ multi-lines": {
        "prefix": "snm",
        "description": "New luasnip entry",
        "body": [
            "\"${1:name}\": {",
            "\t\"prefix\": \"${2:prefix}\",",
            "\t\"description\": \"${3:foo}\",",
            "\t\"body\": [",
            "\t\t\"$0\"",
            "\t]",
            "\\},"
        ]
    },
    "Snippet w/ single line": {
        "prefix": [
            "sns",
            "sn"
        ],
        "description": "New luasnip entry",
        "body": [
            "\"${1:name}\": {",
            "\t\"prefix\": \"${2:prefix}\",",
            "\t\"description\": \"${3:foo}\",",
            "\t\"body\": \"${0:foo}\"",
            "\\},"
        ]
    },
    "TM_SELECTED_TEXT": {
        "prefix": "tmst",
        "description": "The currently selected text or the empty string.",
        "body": "\\${${1:0}:\\$TM_SELECTED_TEXT}"
    },
    "TM_SELECTED_TEXT w/ fallback": {
        "prefix": [
            "TM_SELECTED_TEXT_WITH_FALLBACK",
            "tmstf",
            "tm"
        ],
        "description": "The currently selected text or the FALLBACK string. (`tm`)",
        "body": "\\${${1:0}:\\${TM_SELECTED_TEXT:${0:FallbackStr}}}"
    },
    "CURRENT_YEAR": {
        "prefix": "curyear",
        "description": "The current year.",
        "body": "\\$CURRENT_YEAR"
    },
    "Current ISO DATE": {
        "prefix": [
            "curisodate",
            "cur"
        ],
        "description": "The current date in ISO-8601.",
        "body": "\\$CURRENT_YEAR-\\$CURRENT_MONTH-\\$CURRENT_DATE"
    },
    "Current ISO datetime": {
        "prefix": "curisodatetime",
        "description": "The current datetime in ISO-8601.",
        "body": "\\$CURRENT_YEAR-\\$CURRENT_MONTH-\\${CURRENT_DATE}T\\$CURRENT_HOUR:\\$CURRENT_MINUTE:\\$CURRENT_SECOND\\$CURRENT_TIMEZONE_OFFSET"
    }
}
