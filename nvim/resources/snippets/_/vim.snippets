snippet foldm "foldmarker"
	`!lua string.format(vim.bo.commentstring, string.find(vim.bo.commentstring, ' ') and '{{{' or ' {{{')` $0
	$TM_SELECTED_TEXT
	`!lua string.format(vim.bo.commentstring, string.find(vim.bo.commentstring, ' ') and '}}}' or ' }}}')`
snippet vim "vi modeline"
	`luaeval("string.format(vim.bo.commentstring, string.find(vim.bo.commentstring, ' ') and '' or ' ')")`vi:${2:sw=2}:${1:tw=80}:ft=${0:filetype}:
snippet vimfold "vi modeline for fold"
	`luaeval("string.format(vim.bo.commentstring, string.find(vim.bo.commentstring, ' ') and '' or ' ')")`vim:foldmethod=marker:foldenable:foldlevel=${1:1}:
